{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "typescript check",
            "command": "tsc",
            "args": [
                "-w",
                "--noEmit"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "type": "typescript",
            "tsconfig": "packages/@tinacms/form-builder/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        }
    ]
}